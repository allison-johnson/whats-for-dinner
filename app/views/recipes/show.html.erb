<h2><%= @recipe.name %></h2>
<h4><%= "Submitted by: #{@owner.first_name} #{@owner.last_name}" %></h4>
<h4><%= "Category: #{@category.name}" %>

<h3>Ingredients</h3>
<ul>
  <% @ingredients.each do |ingr| %>
    <li><%= "#{ingr.quantity} of #{ingr.ingredient.name}" %></li> 
  <% end %>
</ul>

<h3>Steps</h3>
<ol>
  <% @instructions.each do |step| %>
    <li><%= step %></li> 
  <% end %>
</ol>